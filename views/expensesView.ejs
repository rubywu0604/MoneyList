<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" http-equiv="Permissions-Policy" content="interest-cohort=()">
    <link rel="stylesheet" href="../css/style.css">
    <title>Expenses</title>
  </head>
  <body>
    <header class="header">
      <ul>
        <li><a href="expenses.html">Expenses</a></li>
        <li><a href="incomes.html">Incomes</a></li>
      </ul>
      <h1 class="title">My Money List<span class="title_name">Expenses</span></h1>
    </header>

    <section>
      <h3 class="add_new">Add New expense</h3>
      <ul>
        <span>Date/Time</span>
          <input type="date" name="date" id="inputdate" class="inputdate">
          <input type="time" name="time" id="inputtime" class="inputtime">
        <span>Tag</span>
          <input type="text" name="tag" id="inputtag" class="inputtag">
        <span>Amount</span>
          <input type="number" name="amount" id="inputamount" class="inputamount">
        <button type="Save" name="save" id="savebtn" class="savebtn">Save</button>
      </ul>
    </section>

    <footer>
      <h3 class="history_list">Expenses List</h3>
      <table class="table">
      <thead class="table_head">
        <tr>
          <th scope="col" class="th_date">Date</th>
          <th scope="col" class="th_time">Time</th>
          <th scope="col" class="th_tag">Tag</th>
          <th scope="col" class="th_amount">Amount</th>
          <th scope="col" class="th_btn">
            <button type='delete' name="delete" id="deletebtn" class="deletebtn">Delete</button>
            <button type='edit' name="edit" id="editbtn" class="editbtn">Edit</button>
            <script src="../js/app_exp.js" type="text/javascript"></script>
          </th>
       </tr>
     </thead>
     <tbody class="table_body">
       <% historyExpList.forEach(expList => { %>
       <tr>
         <td class="tb_date"><p><%= expList.date %></p></td>
         <td class="tb_time"><p><%= expList.time %></p></td>
         <td class="tb_tag"><p><%= expList.tag %></p></td>
         <td class="tb_amount"><p><%= expList.amount %></p></td>
         <td>
           <input class="checkbox_exp" type="checkbox" value="<%= expList._id %>" onclick="selectedExp()" unchecked>
         </td>
      </tr>
      <% }) %>
     </tbody>
     </table>
   </footer>
  </body>
</html>